---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog')).sort(
  (a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime()
);
---

<BaseLayout title="Blog" description="Thoughts on faith, ministry, Scripture, and the Christian life by Justin Gatlin.">
  <!-- Page Header -->
  <section class="bg-navy text-white py-16">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="text-4xl font-heading font-bold text-white mb-4">Blog</h1>
      <p class="text-gold-light text-lg">Thoughts on faith, ministry, Scripture, and the Christian life.</p>
    </div>
  </section>

  <!-- Blog Posts -->
  <section class="py-16 bg-cream">
    <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
      {posts.length === 0 ? (
        <p class="text-center text-warm-gray-light text-lg">Posts coming soon!</p>
      ) : (
        <div class="space-y-8">
          {posts.map(post => (
            <article class="bg-white rounded-xl shadow-md hover:shadow-lg transition-shadow p-8">
              <a href={`/blog/${post.id}`} class="block group">
                <time class="text-sm text-gold-dark font-medium">
                  {new Date(post.data.date).toLocaleDateString('en-US', {
                    year: 'numeric',
                    month: 'long',
                    day: 'numeric',
                  })}
                </time>
                <h2 class="text-2xl font-heading font-bold text-navy mt-2 mb-3 group-hover:text-gold-dark transition-colors">
                  {post.data.title}
                </h2>
                <p class="text-warm-gray leading-relaxed">
                  {post.data.description}
                </p>
                <span class="inline-block mt-4 text-gold-dark font-semibold text-sm group-hover:text-navy transition-colors">
                  Read more &rarr;
                </span>
              </a>
            </article>
          ))}
        </div>
      )}
    </div>
  </section>
</BaseLayout>
